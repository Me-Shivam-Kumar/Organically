        <activity android:name=".FindOrdersActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".ViewBidsActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".CustomerMainActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".ViewAllOfferings"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>